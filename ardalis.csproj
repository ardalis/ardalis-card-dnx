<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>ardalis</ToolCommandName>
    <PackageId>ardalis</PackageId>
    <Description>CLI for Ardalis resources and information - Run with 'dnx ardalis' to access blog, YouTube, business card, and more</Description>
    <Authors>Ardalis (Steve Smith)</Authors>
    <PackageProjectUrl>https://github.com/ardalis/ardalis-card-dnx</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ardalis/ardalis-card-dnx</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>dotnet-tool;cli;business-card;dnx</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Version>1.10.0</Version>
    <ReleaseNotes>Enhanced recent command with 'When' column showing relative timestamps (e.g., '5 min ago', '2 hours ago'). Added --verbose flag to show detailed progress. Fixed GitHub lightning icon display. Refactored code to eliminate duplication.</ReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console.Cli" Version="0.53.0" />
    <PackageReference Include="Spectre.Console" Version="0.53.0" />
    <PackageReference Include="Spectre.Console.ImageSharp" Version="0.53.0" />
  </ItemGroup>

</Project>
